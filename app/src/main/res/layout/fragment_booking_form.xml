<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="200dp"
    android:layout_gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    tools:context=".BookingFormFragment"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<!--    <ImageView-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="100dp"-->
<!--        android:layout_gravity="center"-->
<!--        android:contentDescription="Logo"-->
<!--        android:src="@drawable/logo" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking Form"
        android:textAlignment="center"
        android:textColor="@color/lavender"
        android:textSize="36sp"
        android:textStyle="bold" />

<TextView
    android:id="@+id/firstNameTextView"
    android:layout_width="match_parent"
    android:background="@drawable/custom_edittext"
    android:textSize="22sp"

    android:hint="Name"
    android:layout_margin="10dp"
    android:textColor="@color/black"
    android:padding="8dp"
    android:layout_height="50dp" />

    <TextView
        android:id="@+id/phoneTextView"
        android:layout_width="match_parent"
        android:background="@drawable/custom_edittext"
        android:textSize="22sp"
        android:hint="Phone"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:padding="8dp"
        android:layout_height="50dp"/>


    <TextView
        android:id="@+id/roomTypeTextView"
        android:layout_width="match_parent"
        android:background="@drawable/custom_edittext"
        android:textSize="22sp"

        android:hint="room Type"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:padding="8dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/checkinTextView"
        android:layout_width="match_parent"
        android:background="@drawable/custom_edittext"
        android:textSize="22sp"

        android:hint="Check in date "
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:padding="8dp"
        android:layout_height="50dp"/>


    <EditText
        android:id="@+id/roomNumberEditText"
        android:layout_width="match_parent"
        android:background="@drawable/custom_edittext"
        android:textSize="22sp"

        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:padding="8dp"
        android:layout_height="50dp"
        android:hint="Room Number"/>

    <EditText
        android:id="@+id/daysEditText"
        android:layout_width="match_parent"
        android:background="@drawable/custom_edittext"
        android:textSize="22sp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:padding="8dp"
        android:layout_height="50dp"
        android:hint="Number of days"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/lavender"
        android:text="Submit"/>

</LinearLayout>
