<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CostumerroomdetailsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Your Room"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:layout_gravity="center|top"
            android:layout_margin="10dp"
            android:padding="15dp">

            <!-- Your existing content here -->
            <ImageView
                android:id="@+id/roomImageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
    />

            <TextView
                android:id="@+id/roomTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room type "
                android:textAlignment="center"
                android:textColor="@color/primary"
                android:textSize="24sp"
                android:textStyle="bold"
           />

            <EditText
                android:id="@+id/firstname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Firstname"
                android:padding="8dp"
                android:textColor="@color/black"
    />

            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Lastname"
                android:padding="8dp"
                android:textColor="@color/black"
       />


            <LinearLayout
                android:id="@+id/constraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                >

                <EditText
                    android:id="@+id/adultEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:padding="6dp"
                    android:drawableLeft="@drawable/baseline_airline_seat_recline_normal_24"
                    android:hint=" No. of Adults"
                    android:inputType="number"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    />


                <EditText
                    android:id="@+id/childEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:padding="8dp"
                    android:layout_marginLeft="40dp"
                    android:drawableLeft="@drawable/baseline_airline_seat_individual_suite_24"
                    android:hint=" No. of Childs"
                    android:inputType="number"
                    android:layout_gravity="center"
                    android:textColor="@color/black" />
            </LinearLayout>

